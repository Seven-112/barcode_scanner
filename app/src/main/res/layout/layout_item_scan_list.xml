<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/product_name"-->
<!--        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"-->
<!--        android:textAlignment="center"-->
<!--        android:gravity="center_horizontal" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageType"
            android:layout_toRightOf="@+id/SubtractBtn"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/itemTxt"
            android:text="name"
            android:layout_toRightOf="@+id/imageType"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/add"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/addbtn"
            android:layout_toRightOf="@+id/itemTxt"
            android:layout_centerVertical="true"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/item_favourite"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/favBtn"
            android:layout_toRightOf="@+id/addbtn"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/quantityTxt"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="quantity"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/favBtn"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey2"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>

